<?xml version="1.0" encoding="utf-8" ?>
<Window
    x:Class="CommunityToolkit.Labs.WinUI.MathView.Sample.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:canvas="using:Microsoft.Graphics.Canvas.UI.Xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:CommunityToolkit.Labs.WinUI.MathView.Sample"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:math="using:CommunityToolkit.Labs.WinUI.MathView"
    Title="CommunityToolkit.Labs.WinUI.MathView.Sample"
    mc:Ignorable="d">

    <StackPanel
        HorizontalAlignment="Left"
        VerticalAlignment="Stretch"
        Orientation="Vertical">
        <math:MathView LaTeX="x = -b \pm \frac{\sqrt{b^2-4ac}}{2a}" />
        <math:MathView LaTeX="x + 2 \sqrt{x} + 1 = (\sqrt x+1)^2" />
    </StackPanel>
</Window>
